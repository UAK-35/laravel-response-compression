{
    "name": "uak35/laravel-response-compression",
    "description": "Laravel response compression middleware",
    "type": "library",
    "require": {
        "php": "^8.3.0",
        "ext-zlib": "*",
        "ext-brotli": "*",
        "ext-zstd": "*",
        "illuminate/http": "12.*",
        "illuminate/support": "12.*"
    },
    "require-dev": {
        "laravel/pint": "1.*",
        "orchestra/testbench": "10.*",
        "pestphp/pest-plugin-laravel": "4.*",
        "pestphp/pest-plugin-type-coverage": "4.*",
        "phpstan/phpstan": "2.*",
        "rector/rector": "2.*",
        "symfony/var-dumper": "7.*"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Uak35\\ResponseCompression\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Uak35\\ResponseCompression\\Tests\\": "tests"
        }
    },
    "keywords": [
        "laravel",
        "Uak35",
        "optimize",
        "encoding",
        "performance",
        "php"
    ],
    "authors": [
        {
            "name": "Umar Ali Khan",
            "email": "uak282006@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Uak35\\ResponseCompression\\ResponseCompressionServiceProvider"
            ]
        }
    },
    "scripts": {
        "refactor": "rector",
        "tidy": [
            "@lint",
            "@refactor",
            "@lint"
        ],
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "./vendor/bin/phpstan analyse --ansi",
        "test:unit": "./vendor/bin/pest --colors=always --coverage --parallel --min=100",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
